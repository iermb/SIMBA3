<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SIMBA3\Component\Domain\Variable\Entity\TypeArea" table="type_area">
        <id name="id" type="integer" column="id" />
        <id name="locale" association-key="true" />
        <field name="name" column="name" type="string" length="100" nullable="false" unique="true" />
        <many-to-one field="locale" target-entity="SIMBA3\Component\Domain\Locale\Entity\Locale">
            <join-column name="locale_id" referenced-column-name="id" />
        </many-to-one>
    </entity>



</doctrine-mapping>