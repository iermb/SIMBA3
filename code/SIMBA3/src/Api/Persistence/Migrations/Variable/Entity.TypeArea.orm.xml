<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SIMBA3\Component\Domain\Variable\Entity\TypeArea" table="type_area">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="code" column="code" type="integer" />
        <field name="language" column="language" type="string" length="2" nullable="false" />
        <field name="name" column="name" type="string" length="100" nullable="false" />

    </entity>

</doctrine-mapping>